@model RopaMexicana_171G0250_171G0222.Models.Administrador
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Inicio de sesión para Administradores</h2>
    <p> Administrador </p>
    <form asp-controller="Home" asp-action="InicioDeSesionAdministrador">
        <label>Usuario</label>
        <input type="text" asp-for="Usuario" required id="Usuario" /> <br />
        <br />
        <label>Contraseña</label>
        <input type="password" asp-for="Contraseña" required /> <br />
        <br />
        <input type="submit" value="Iniciar sesión" />
        <br />
        <p style="text-align:center; margin:20px 0">
            <a href="javascript:window.history.back()">Regresar</a>
        </p>
    </form>
    <br />

    <p>
        @Html.ValidationSummary()
    </p>


</div>
